<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:key="torchlight_enable"
        android:summary="Press the Volume Up key when screen is off to turn on the flashlight, Volume Down to disable"
        android:title="Lockscreen flashlight" />
    <com.wubydax.romcontrol.v2.prefs.MyListPreference
        android:entries="@array/torchlight_timeout_entries"
        android:entryValues="@array/torchlight_timeout_values"
        android:key="torchlight_timeout"
        android:title="Auto timeout for the flashlight" />
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:defaultValue="true"
        android:key="keyguard_charging_notif"
        android:summaryOff="Hidden"
        android:summaryOn="Displayed"
        android:title="Charging information"
        app:packageNameToKill="com.android.systemui" />
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:defaultValue="false"
        android:key="nrom_lockscreen_lunar"
        android:summaryOff="Disabled"
        android:summaryOn="Enabled"
        android:title="Enable Lunar time on the lockscreen" />
    <com.wubydax.romcontrol.v2.prefs.MySeekBarPreference
        android:defaultValue="17"
        android:key="aod_brightness"
        android:title="Aod Brightness Control"
        app:maxValue="100"
        app:rebootDevice="true" />
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:defaultValue="false"
        android:key="JJDS_weather_visibility"
        android:summaryOff="Hidden"
        android:summaryOn="Visible"
        android:title="Weather on Lockscreen"
        app:packageNameToKill="com.android.systemui" />
</PreferenceScreen>
