<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceScreen
        android:persistent="false"
        android:summary="Show Hidden System Advanced menu"
        android:title="Advanced Settings Menu">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="db.wonitor.flyme.MainActivity"
            android:targetPackage="com.grace0x.advance.menu" />
    </PreferenceScreen>
    <PreferenceScreen
        android:persistent="false"
        android:summary="Edit Toolbox Settings"
        android:title="Toolbox Controller V2.0">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.wubydax.toolboxsettings.ToolboxSettings"
            android:targetPackage="com.wubydax.toolboxsettings" />
    </PreferenceScreen>
    <PreferenceScreen
        android:persistent="false"
        android:summary="Add apps to ultra power saving mode"
        android:title="Ultra power saving mode">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="mobi.xperiacle.upsm.manager.MainActivity"
            android:targetPackage="mobi.xperiacle.upsm.manager" />
    </PreferenceScreen>
    <PreferenceScreen
        android:persistent="false"
        android:summary="Runs the dpi customization app"
        android:title="Change the display dpi">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetClass="com.wubydax.changedpi.MainActivity"
            android:targetPackage="com.wubydax.changedpi" />
    </PreferenceScreen>
    <com.wubydax.romcontrol.v2.prefs.MySwitchPreference
        android:defaultValue="false"
        android:key="display_outdoor_mode"
        android:summaryOff="Disabled"
        android:summaryOn="Enabled"
        android:title="Outdoor mode" />
</PreferenceScreen>